{
  "name": "fast-tasks",
  "displayName": "Fast Tasks",
  "description": "Quick access to workspace tasks from explorer sidebar with enhanced performance and visual feedback",
  "version": "0.1.6",
  "publisher": "batyan-soft",
  "license": "MIT",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other",
    "Programming Languages"
  ],
  "keywords": [
    "tasks",
    "task runner",
    "workspace",
    "productivity",
    "build",
    "test",
    "npm",
    "shell",
    "typescript"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Batyan45/fast-tasks.git"
  },
  "bugs": {
    "url": "https://github.com/Batyan45/fast-tasks/issues"
  },
  "contributes": {
    "configuration": {
      "title": "Fast Tasks",
      "properties": {
        "fast-tasks.flatList": {
          "type": "boolean",
          "default": false,
          "description": "Show tasks as a single flat list instead of grouping by folders"
        },
        "fast-tasks.ignoreHide": {
          "type": "boolean",
          "default": false,
          "description": "Ignore tasks.json 'hide' and show all tasks"
        }
      }
    },
    "commands": [
      {
        "command": "fast-tasks.refreshTasks",
        "title": "Refresh Tasks",
        "icon": "$(refresh)"
      },
      {
        "command": "fast-tasks.selectTasks",
        "title": "Select Tasks",
        "icon": "$(list-selection)"
      },
      {
        "command": "fast-tasks.stopTask",
        "title": "Stop Task",
        "icon": "$(stop)"
      },
      {
        "command": "fast-tasks.editTask",
        "title": "Edit Task",
        "icon": "$(edit)"
      },
      {
        "command": "fast-tasks.runTask",
        "title": "Run Task (Internal)"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "fastTasksView",
          "name": "Tasks",
          "when": "workspaceFolderCount > 0"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "fast-tasks.selectTasks",
          "when": "view == fastTasksView",
          "group": "navigation@1"
        },
        {
          "command": "fast-tasks.refreshTasks",
          "when": "view == fastTasksView",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "fast-tasks.stopTask",
          "when": "view == fastTasksView && viewItem == runningTask",
          "group": "inline"
        },
        {
          "command": "fast-tasks.editTask",
          "when": "view == fastTasksView && viewItem == task",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "build-vsix": "npm run package && vsce package",
    "version": "npm version --no-git-tag-version"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "^8.56.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "jsonc-parser": "^3.3.1"
  }
}
